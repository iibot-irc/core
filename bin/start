#!/bin/bash
set -e

BOTNAME=`$HOME/bin/config nick`
USERNAME=`$HOME/bin/config user`
NETWORK=`$HOME/bin/config network`

IRC=$HOME/irc/$NETWORK

if [ `whoami` != $USERNAME ] ; then
  echo "Must run as $USERNAME"
  exit -1
fi

if [ -f $HOME/bin/pre_start ]; then
  $HOME/bin/pre_start
fi

# Kill any existing iibot stuff
killall -9 ii || true
killall -9 ircwatch || true
rm -rf $IRC

# Connect to irc
$HOME/bin/ii $NETWORK -n $BOTNAME -i $HOME/irc/ >> $HOME/log/ii.log 2>&1 &

if [ -f $HOME/bin/post_start ]; then
  $HOME/bin/post_start
fi
